/**跑马灯效果**/
.inform{
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-family: PingFangSC;
    font-size: 26rpx;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: normal;
    letter-spacing: normal;
    color: #999999;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: clip;
    display: flex;
    align-items: center;
    /* position: fixed;
    top: 65px; */
}

.inform-icon{
    width : 20%;
    height : 44%;
    max-width: 37rpx;
    margin-left : 15rpx;
    margin-right : 10rpx
}
.inform-swiper{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: clip;
}
/*
*跑马灯效果
*/
@keyframes myfirst
{
    0% { transform: translateX(0); } 
    100% { transform: translateX(-100%); } 
} 
.swiper{
    display: inline-block;
    position: relative;
    white-space: nowrap;
    animation: myfirst 25s infinite linear;
}
.content-space{
    width: 5em;
    display: inline-block;
}
