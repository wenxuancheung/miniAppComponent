/* components/loading/loading.wxss */
.loadig{
	width: 100vw;
	height: 100vh;
	background-color: rgba(255,255,255, 0.95);
	z-index: 1000;
	position: fixed;
	top: 0;
	left: 0;
}
.loadingImg{
	width: 150rpx;
    height: 150rpx;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 9999;
    margin: auto;
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}